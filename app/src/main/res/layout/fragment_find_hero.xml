<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:orientation="vertical">

    <android.support.v7.widget.GridLayout
        android:id="@+id/layoutGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageSwitcher
            android:id="@+id/img1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_column="0"
            app:layout_row="0"
            android:scaleType="centerCrop"/>

        <ImageSwitcher
            android:id="@+id/img2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/dota2_logo"
            app:layout_row="0"
            app:layout_column="1"
            android:scaleType="centerCrop"/>

        <ImageSwitcher
            android:id="@+id/img3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/dota2_logo"
            app:layout_row="0"
            app:layout_column="2"
            android:scaleType="centerCrop"/>

        <ImageSwitcher
            android:id="@+id/img4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/dota2_logo"
            app:layout_row="1"
            app:layout_column="0"
            android:scaleType="centerCrop"/>

        <ImageSwitcher
            android:id="@+id/img5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/dota2_logo"
            app:layout_row="1"
            app:layout_column="1"
            android:scaleType="centerCrop"/>

        <ImageSwitcher
            android:id="@+id/img6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/dota2_logo"
            app:layout_row="1"
            app:layout_column="2"
            android:scaleType="centerCrop"/>

        <ImageSwitcher
            android:id="@+id/img7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/dota2_logo"
            app:layout_row="2"
            app:layout_column="0"
            android:scaleType="centerCrop"/>

        <ImageSwitcher
            android:id="@+id/img8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/dota2_logo"
            app:layout_row="2"
            app:layout_column="1"
            android:scaleType="centerCrop"/>

        <ImageSwitcher
            android:id="@+id/img9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/dota2_logo"
            app:layout_row="2"
            app:layout_column="2"
            android:scaleType="centerCrop"/>

    </android.support.v7.widget.GridLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/layoutGame"
        android:layout_centerInParent="true"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btnRules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rules"/>

        <Button
            android:id="@+id/btnPickUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnRules"
            android:text="Pick up Prize"/>

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnPickUp"
            android:text="Clear"/>

    </RelativeLayout>

</RelativeLayout>